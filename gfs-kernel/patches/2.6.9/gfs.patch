+gfs_put_inode(struct inode *inode)
+{
+	struct gfs_sbd *sdp = vfs2sdp(inode->i_sb);
+	struct gfs_inode *ip = vn2ip(inode);
+
+	atomic_inc(&sdp->sd_ops_super);
