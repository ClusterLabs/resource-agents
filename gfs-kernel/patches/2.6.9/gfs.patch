+do_get_super(struct gfs_sbd *sdp, void *arg)
+{
+	struct gfs_sb *sb;
+	struct gfs_holder sb_gh;
+	struct buffer_head *bh;
+	int error;
+
+	sb = kmalloc(sizeof(struct gfs_sb), GFP_KERNEL);
