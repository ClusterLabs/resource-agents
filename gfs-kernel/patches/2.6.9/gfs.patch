+static int
+gfs_close(struct inode *inode, struct file *file)
+{
+	struct gfs_sbd *sdp = vfs2sdp(inode->i_sb);
+	struct gfs_file *fp;
+
+	atomic_inc(&sdp->sd_ops_file);
+
+	fp = vf2fp(file);
+	vf2fp(file) = NULL;
+
+	if (!gfs_assert_warn(sdp, fp))
+		kfree(fp);
+
+	return 0;
+}
