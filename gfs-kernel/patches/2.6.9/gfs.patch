+	error = gfs_readi(ip, jt.jio_data, jt.jio_offset, jt.jio_size,
+			  gfs_copy2user);
+
+	gfs_glock_dq_uninit(&i_gh);
+
+	if (error < 0)
+		return error;
+	jt.jio_count = error;
+
+	if (copy_to_user(arg, &jt, sizeof(struct gfs_jio)))
+		return -EFAULT;
