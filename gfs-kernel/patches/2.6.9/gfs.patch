+/**
+ * gfs_ea_find - find a matching eattr
+ * @ip:
+ * @er:
+ * @el:
+ *
+ * Returns: errno
+ */
+
+int
+gfs_ea_find(struct gfs_inode *ip,
+	    struct gfs_ea_request *er,
+	    struct gfs_ea_location *el)
+{
+	struct ea_find ef;
+	int error;
+
+	ef.ef_er = er;
+	ef.ef_el = el;
+
+	memset(el, 0, sizeof(struct gfs_ea_location));
+
+	error = ea_foreach(ip, ea_find_i, &ef);
+	if (error > 0)
+		return 0;
+
+	return error;
+}
