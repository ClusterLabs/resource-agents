+/**
+ * jread_ioctl - Read from a journaled data file via ioctl
+ * @sdp: the filesystem
+ * @arg: The argument from ioctl
+ *
+ * Returns: Amount of data copied or error
+ */
+
+static int
+jread_ioctl(struct gfs_sbd *sdp, void *arg)
+{
+	struct gfs_jio jt;
+	struct gfs_inode *ip;
+	struct gfs_holder i_gh;
+	int error;
