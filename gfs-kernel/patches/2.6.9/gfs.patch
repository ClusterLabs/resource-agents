+	if (ip->i_di.di_eattr) {
+		error = gfs_get_eattr_meta(ip, &ub);
+		if (error)
+			goto out;
+	}
+
+	if (copy_to_user(arg, &ub, sizeof(struct gfs_user_buffer)))
+		error = -EFAULT;
