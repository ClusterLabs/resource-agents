#       OCF_RESKEY_vlan_interface
#       OCF_RESKEY_vlan_id
#	OCF_RESKEY_vlan_name
#       OCF_RESKEY_vlan_reorder_hdr
#       OCF_RESKEY_vlan_gvrp
#       OCF_RESKEY_vlan_mvrp
#       OCF_RESKEY_vlan_loose_binding
