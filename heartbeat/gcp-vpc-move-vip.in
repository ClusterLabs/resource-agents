# Constants for alias add/remove modes
ADD = 0
REMOVE = 1

CONN = None
THIS_VM = None
ALIAS = None
MAX_RETRIES = 3
RETRY_BACKOFF_SECS = 1
METADATA_SERVER = 'http://metadata.google.internal/computeMetadata/v1/'
METADATA_HEADERS = {'Metadata-Flavor': 'Google'}
METADATA = \
